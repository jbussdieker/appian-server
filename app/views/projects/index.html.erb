<div class="span8 offset2">
  <p><%= link_to "New", new_project_path, class: "btn" %></p>
  <div class="well">
    <table class="table table-striped">
      <tr>
        <th colspan="3">Projects</th>
      </tr>
      <% @projects.each do |project| %>
        <tr>
            <td><%= build_status_badge(project) %></td>
            <td><%= link_to project.name, project %></td>
            <td><%= link_to "", project_path(project), method: :delete, class: "icon-trash" %></td>
        </tr>
      <% end %>
    </ul>
  </div>
</div>

